    } else {
      deps = []
      if (!use_libfuzzer) {
        if (!hiperf_independent_compilation && !ohos_indep_compiler_enable && !use_clang_coverage) {
          deps += [
            ":hiperf_host(//build/toolchain/linux:clang_${host_cpu})",  # host_linux
